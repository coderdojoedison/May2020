import random
import time


playername = input ("Hi, what is your name: ")
print("Welcome " + playername + "!")
score_player = 0
score_computer = 0

play = input("Ready to play (yes/no): ")
if play == "no":
  print("OK! Have a nice day!")
elif play != "yes":
  print ("I didn't understand that :(")

while play == "yes":
  choice = input ("Choose rock (r), paper (p), or scissors (s): ")
  valid_choices = ['r', 'p', 's']

  if choice not in valid_choices:
    print("I didn't understand that! Please enter r, p, or s.")
    exit() 
  if choice == "r":
    choice = "rock"
  elif choice == "p":
    choice = "paper"
  elif choice == "s":
    choice = "scissors"

  plays = ['r', 'p', 's']

  comp_choice = random.choice(plays)

  if comp_choice == "r":
    print ("Computer chose rock!")
    comp_choice = "rock"

  if comp_choice == "s":
    print ("Computer chose scissors!")
    comp_choice = "scissors"

  if comp_choice == "p":
    print ("Computer chose paper!")
    comp_choice = "paper"

  print (choice + " versus " + comp_choice)

  if choice == comp_choice:
    print("It's a tie!")

  elif choice == "rock" and comp_choice == "scissors":
    print(playername + " wins!")
    score_player = score_player +1

  elif choice == "rock" and comp_choice == "paper":
    print("Computer wins!")
    score_computer = score_computer +1

  elif choice == "paper" and comp_choice == "scissors":
    print("Computer wins!")
    score_computer = score_computer +1


  elif choice == "paper" and comp_choice == "rock":
    print ("Player wins!")
    score_player = score_player +1


  elif choice == "scissors" and comp_choice == "rock":
    print("Computer wins!")
    score_computer = score_computer +1

  elif choice == "scissors" and comp_choice == "paper":
    print(playername + " wins!")
    score_player = score_player +1



  print("The score is now: Player: " + str(score_player) + " Computer: " + str(score_computer))


  time.sleep(1)

  play = input ("Do you want to play again? (yes/no): ")

  if play == "no":
    if score_player < score_computer:
      print ("Computer wins! Have a nice day!")
    elif score_player > score_computer:
      print (playername + " wins! Have a nice day!")
    elif score_player == score_computer:
      print ("It's a tie! Have a nice day!")
  elif play != "yes":
      print ("I didn't understand that :(")
      exit()
    
  

